<% provide(:title, "单词计划清单") %>
<div class="row">
  <%= render 'shared/word_bar' %>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header text-center text-secondary">
        单词计划清单
      </div>
      <div class="card-body">
        <div class="text-left">
          <%= link_to "创建单词计划", new_task_path, remote: true, class: "btn btn-primary btn-sm" %>
        </div>
        <div class="mt-1">
          <table class="table table-sm bg-white">
            <thead>
              <tr>
                <td class="text-left text-primary"><strong>待完成清单</strong></td>
                <td class="text-right text-secondary"></td>
              </tr>
            </thead>
            <tbody id="incomplete_tasks"> 
              <%= render @incomplete_tasks %>
            </tbody>
          </table>
          <table class="table table-sm bg-white">
            <thead>
              <tr>
                <td class="text-left text-primary"><strong>完成清单</strong></td>
                <td class="text-right text-secondary"></td>
              </tr>
            </thead>
            <tbody id="complete_tasks">
              <%= render @complete_tasks %>
            </tbody>
          </table>
        </div>  
      </div>
    </div>
  </div>
</div>
<%= render 'shared/form_modal' %>
<%= render 'shared/confirm_modal' %>
