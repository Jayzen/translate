<tr id="edit_task_<%= task.id%>">
  <td class="text-left text-secondary">
    <% if task.complete? %>
      <small><%= task.updated_at.strftime("%Y年%m月%d日") %></small> | 
      <del><%= task.name %></del>
    <% else %>
      <small><%= task.updated_at.strftime("%Y年%m月%d日") %></small> | 
      <%= task.name %>
    <% end %>
  </td>
  <td class="text-right text-secondary">
    <%= link_to "标记", task, method: :put, remote: true, class: "badge badge-primary"%>
    <%= link_to "删除", delete_task_path(task), remote: true, class: "badge badge-danger" %>
  </td>
</tr>
