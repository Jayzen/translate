<div class="col-md-9">
  <div class="card">
    <div class="card-header text-secondary text-center">
      修改密码
    </div>
    <div class="card-body">
      <%= form_for(:password_alter, url: password_alter_path(current_user), method: :put ) do |f| %>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary">旧密码</label>
          <div class="col-sm-10">
            <%= f.password_field :old_password, class: "form-control #{'is-invalid' if has_error?(@user, :old_password)}", autofocus: true %>
            <% if has_error?(@user, :old_password) %>
              <div class="invalid-feedback d-block"><%= get_error(@user, :old_password) %></div>
            <% end %>
          </div>
        </div> 
        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary">新密码</label>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control #{'is-invalid' if has_error?(@user, :password)}" %>
            <% if has_error?(@user, :password) %>
              <div class="invalid-feedback d-block"><%= get_error(@user, :password) %></div>
            <% end %>
          </div>
        </div>
   
        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary">密码确认</label>
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, class: "form-control #{'is-invalid' if has_error?(@user, :password_confirmation)}" %>
            <% if has_error?(@user, :password_confirmation) %>
              <div class="invalid-feedback d-block"><%= get_error(@user, :password_confirmation) %></div>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label"></label>
          <div class="col-sm-10">
            <%= f.submit "修改密码", class: "btn btn-primary btn-sm"%>
          </div> 
        </div>
      <% end %>
    </div>
  </div>
</div>
